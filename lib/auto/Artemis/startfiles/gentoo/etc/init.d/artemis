#!/sbin/runscript
# Copyright 1999-2007 Gentoo Foundation
# Distributed under the terms of the GNU General Public License v2

depend() {
        after *
}

start() {
        ebegin "(gentoo) Starting artemis program run control"

#needed for NFS
        /etc/init.d/portmap start

        STARTSCRIPT=
        FILENAME="artemis-automatic-test.pl"
        POSSIBLE_PATHS="
/mnt/opt/artemis/bin/
/opt/artemis/bin/
/home/artemis/perl510/bin/
"
        while (( 1 )); do
            for DIR in $POSSIBLE_PATHS; do
                STARTSCRIPT=${DIR}/$FILENAME
                if [[ -e $STARTSCRIPT ]]
                then
                    /sbin/ifconfig
                    ${DIR}/perl $STARTSCRIPT $*
                    exit 0
                fi
            done
            mount natrium:/vol/osrc_home/ /home
            echo "Wait for auto mount /home/artemis ..."
            sleep 2
        done

        eend $? "Failed to start local"
}

stop() {
        ebegin "Nothing to do"
}

